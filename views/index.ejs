<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Êé≤Á§∫Êùø</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            padding-top: 2rem;
        }
        .post-card {
            margin-bottom: 1.5rem;
            transition: transform 0.2s;
        }
        .post-card:hover {
            transform: translateY(-2px);
        }
        .post-date {
            font-size: 0.8rem;
            color: #6c757d;
        }
        .reply-card {
            margin-left: 2rem;
            margin-top: 1rem;
            background-color: #f8f9fa;
            border-left: 3px solid #0d6efd;
        }
        .reply-form {
            margin-top: 1rem;
            padding: 1rem;
            background-color: #f8f9fa;
            border-radius: 0.25rem;
        }
        .post-actions {
            display: flex;
            gap: 0.5rem;
            margin-bottom: 1rem;
        }
        .kiriban {
            background: linear-gradient(45deg, #FFD700, #FFA500);
            border: 2px solid #FFD700;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .kiriban .card-body {
            position: relative;
            overflow: hidden;
        }
        .kiriban::before {
            content: "üéâ „Ç≠„É™Áï™„Ç≤„ÉÉ„ÉàÔºÅ";
            position: absolute;
            top: 10px;
            right: 10px;
            background-color: #FFD700;
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: bold;
            color: #000;
            z-index: 1;
        }
        .post-number {
            font-size: 0.9rem;
            color: #6c757d;
            margin-bottom: 0.5rem;
        }
        .total-posts {
            text-align: center;
            margin-bottom: 1rem;
            color: #6c757d;
            font-size: 0.9rem;
        }
        .kiriban-message {
            text-align: center;
            margin-bottom: 2rem;
            padding: 1rem;
            background: linear-gradient(45deg, #ff6b6b, #ff8787);
            color: white;
            font-size: 1.2rem;
            font-weight: bold;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            animation: pulse 2s infinite;
        }
        @keyframes pulse {
            0% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.02);
            }
            100% {
                transform: scale(1);
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center mb-4">Êé≤Á§∫Êùø</h1>
        
        <div class="row justify-content-center">
            <div class="col-md-">
                <!-- Á∑èÊäïÁ®øÊï∞ -->
                <div class="total-posts">
                    Á∑èÊäïÁ®øÊï∞: <%= postCount %>
                </div>

                <!-- „Ç≠„É™Áï™„É°„ÉÉ„Çª„Éº„Ç∏ -->
                <div class="kiriban-message">
                    üéØ „Ç≠„É™Áï™Ë∏è„Çì„Å†„Çâ„Å†„ÅÑ„Å°„Å´Êïô„Åà„Å¶„Å∑„Çä„Éº„Åö üéØ
                </div>

                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Êñ∞Ë¶èÊäïÁ®ø</h5>
                        <form action="/posts" method="POST">
                            <div class="mb-3">
                                <input type="text" class="form-control" name="title" placeholder="„Çø„Ç§„Éà„É´" required>
                            </div>
                            <div class="mb-3">
                                <textarea class="form-control" name="content" rows="4" placeholder="Êú¨Êñá" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">ÊäïÁ®ø„Åô„Çã</button>
                        </form>
                    </div>
                </div>

                <h4 class="mb-3">ÊäïÁ®ø‰∏ÄË¶ß</h4>
                <% posts.forEach(post => { %>
                    <div class="card post-card <%= post.is_kiriban ? 'kiriban' : '' %>">
                        <div class="card-body">
                            <div class="post-number">ÊäïÁ®ø #<%= post.post_number %></div>
                            <h5 class="card-title"><%= post.title %></h5>
                            <p class="post-date mb-2"><%= new Date(post.created_at).toLocaleString('ja-JP') %></p>
                            <p class="card-text"><%= post.content %></p>
                            
                            <div class="post-actions">
                                <!-- Ëøî‰ø°„Éú„Çø„É≥ -->
                                <button class="btn btn-sm btn-outline-primary" 
                                        type="button" 
                                        data-bs-toggle="collapse" 
                                        data-bs-target="#replyForm<%= post.id %>"
                                        aria-expanded="false">
                                    Ëøî‰ø°„Åô„Çã
                                </button>

                                <!-- ÂâäÈô§„Éú„Çø„É≥ -->
                                <button class="btn btn-sm btn-outline-danger"
                                        type="button"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal<%= post.id %>">
                                    ÂâäÈô§
                                </button>
                            </div>
                            
                            <!-- ÂâäÈô§Á¢∫Ë™ç„É¢„Éº„ÉÄ„É´ -->
                            <div class="modal fade" id="deleteModal<%= post.id %>" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">ÊäïÁ®ø„ÅÆÂâäÈô§</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            <p>„Åì„ÅÆÊäïÁ®ø„ÇíÂâäÈô§„Åô„Çã„Å´„ÅØ„Éë„Çπ„ÉØ„Éº„Éâ„ÇíÂÖ•Âäõ„Åó„Å¶„Åè„Å†„Åï„ÅÑ„ÄÇ</p>
                                            <div class="mb-3">
                                                <input type="password" class="form-control" id="password<%= post.id %>" placeholder="„Éë„Çπ„ÉØ„Éº„Éâ">
                                            </div>
                                            <div id="errorMessage<%= post.id %>" class="text-danger"></div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">„Ç≠„É£„É≥„Çª„É´</button>
                                            <button type="button" class="btn btn-danger" onclick="deletePost(<%= post.id %>)">ÂâäÈô§</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="collapse" id="replyForm<%= post.id %>">
                                <div class="reply-form">
                                    <form action="/posts/<%= post.id %>/replies" method="POST">
                                        <div class="mb-3">
                                            <textarea class="form-control" name="content" rows="2" placeholder="Ëøî‰ø°„ÇíÂÖ•Âäõ" required></textarea>
                                        </div>
                                        <button type="submit" class="btn btn-sm btn-primary">Ëøî‰ø°„ÇíÈÄÅ‰ø°</button>
                                    </form>
                                </div>
                            </div>

                            <!-- Ëøî‰ø°‰∏ÄË¶ß -->
                            <% if (post.replies && post.replies.length > 0) { %>
                                <div class="replies mt-3">
                                    <h6 class="text-muted mb-3">Ëøî‰ø° (<%= post.replies.length %>)</h6>
                                    <% post.replies.forEach(reply => { %>
                                        <div class="card reply-card">
                                            <div class="card-body py-2">
                                                <p class="card-text mb-1"><%= reply.content %></p>
                                                <small class="text-muted"><%= new Date(reply.created_at).toLocaleString('ja-JP') %></small>
                                            </div>
                                        </div>
                                    <% }); %>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function deletePost(postId) {
            const password = document.getElementById(`password${postId}`).value;
            const errorMessage = document.getElementById(`errorMessage${postId}`);
            
            try {
                const response = await fetch(`/posts/${postId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ password })
                });

                const data = await response.json();
                
                if (response.ok) {
                    // ÂâäÈô§ÊàêÂäü
                    window.location.reload();
                } else {
                    // „Ç®„É©„Éº„É°„ÉÉ„Çª„Éº„Ç∏„ÇíË°®Á§∫
                    errorMessage.textContent = data.error || 'ÂâäÈô§„Å´Â§±Êïó„Åó„Åæ„Åó„Åü„ÄÇ';
                }
            } catch (error) {
                errorMessage.textContent = '„Ç®„É©„Éº„ÅåÁô∫Áîü„Åó„Åæ„Åó„Åü„ÄÇ';
                console.error('Error:', error);
            }
        }
    </script>
</body>
</html> 